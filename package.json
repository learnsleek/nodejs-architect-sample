{
  "name": "nodejs-architect",
  "version": "1.0.0",
  "description": "clean architecture code",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel src -d dist",
    "now-build": "npm run build",
    "clean": "rimraf dist",
    "db": "babel-node ./db/index.js",
